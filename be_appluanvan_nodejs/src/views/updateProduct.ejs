<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Product</title>
    <link rel="stylesheet" href="css/css.form.css"> 

</head>
<body>
    <div class="container-page">
        <h2>Update Product</h2>
        <form action="/update-product" method="post" class="custom-form">
        

            <!-- <input type="number" id="productId" name="productId" value="<%= productId %>"  readonly> -->
    
            <label for="productName">Product Name:</label>
            <input type="text" id="productName" name="productName" value="<%= productName %>" required><br>
    
            <label for="productPrice">Product Price:</label>
            <input type="number" id="productPrice" name="productPrice" value="<%= productPrice %>" required><br>
    
            <label for="productImage">Product Image URL:</label>
            <input type="text" id="productImage" name="productImage" value="<%= productImage %>" required><br>
    
            <label for="statusProduct">Product Status:</label>
            <input type="text" id="statusProduct" name="statusProduct" value="<%= productStatus %>" required><br>
    
            <label for="productDiameter">Product Diameter:</label>
            <input type="text" id="productDiameter" name="productDiameter" value="<%= productDiameter %>" required><br>
    
            <label for="productHeight">Product Height:</label>
            <input type="text" id="productHeight" name="productHeight" value="<%= productHeight %>" required><br>
    
            <label for="productDescription">Product Description:</label>
            <input type="text" id="productDescription" name="productDescription" value="<%= productDescription %>" required><br>
    
            <label for="productCategory">Product Category:</label>
            <select id="productCategory" name="productCategory" value="<%= productCategory %>" required></select><br>
    
            <input type="submit" value="Update Product">
    
        </form>
    </div>
</body>

<script>
    document.addEventListener("DOMContentLoaded", function(){
    const productCategoryInput = document.getElementById('productCategory');

    productCategoryInput.addEventListener('focus', function(){
        fetch('/getCategoryForProduct')
        .then(response => response.json())
        .then(category => {
            productCategoryInput.innerHTML = '';
            for(let i=0; i<category.length; i++){
                const option = document.createElement("option");
                option.value = category[i].category_name; //gia tri cua input
                option.textContent = category[i].category_name; //show ra giao dien input
                productCategoryInput.appendChild(option);
            }
        })
        .catch(error => console.error('Lá»—i', error));
    })
})
</script>
</html>